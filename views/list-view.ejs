<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>View Hobby</title>

        <link rel="stylesheet" href="styles/list_view_styles.css">
        <link rel="icon" type="image/jpg" href="images/favicon.jpg">

     </head>
    <body>
          <h1>Hobby List</h1>
          <!-- buttons for other pages -->
          <div id="buttons">
               <form action="/" method="get">
                    <button type="submit" onclick="logOut()">Sign Out</button>
               </form>
     
               <form action="create-hobby" method="get">
                    <button type="submit" id="add">Add Hobby!</button>
               </form>
     
               <form action="profile" method="get">
                    <button type="submit">Profile</button>
               </form>
          </div>
        <!-- display hobbies -->
          <div id="list">
               <ul>
                    <hr>

                    <% if (plans.length == 0) { %>
                         <p>There are currently no hobbies listed</p>
                    <% } %>

                    <% for (let i = 0; i < plans.length; i++) { %>
                         <li><b><%= plans[i].title %></b></li>
                         <li><%= plans[i].description %></li>
                         <!-- tag display if not empty -->
                         <% if(plans[i].tagIcon !== "" || plans[i].tagIcon !== "none") { %>
                              <li>Tag: <%= plans[i].tagIcon%></li>
                         <% } %>
                         <!-- display time and date if not empty -->
                         <% if(plans[i].availStartDateTime !== "" || plans[i].availEndDateTime !== "") { %>
                              <li>Time and Date: <%= plans[i].availStartDateTime%> - <%= plans[i].availEndDateTime%></li>
                         <% } %>
                         <button id="remove">Remove</button>
                         <hr>
                    <% } %>
               </ul>
          </div>
          <button onclick = "history.back()" id="back">Back</button>

     </body>

     <script>
          function logOut() {
               console.log(setUser);
               setUser.pop();
               console.log(setUser);
          }
     </script>

</html>