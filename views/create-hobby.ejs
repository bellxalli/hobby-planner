<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Create Hobby Form</title>
        <!-- stylesheet -->
        <link rel="stylesheet" href="styles/create_hobby_popup.css">
        <!-- favicon -->
        <link rel="stylesheet" href="styles/account_styles.css">
        <!-- script -->
        <script src="scripts/client_create_hobby_validation.js" defer></script>

    </head>
    <body>
        <!-- form to add a new hobby to the list -->
        <h1>Add New Hobby</h1>

        <form action="hobby-added" method="post" class="form-container" id="create-hobby">
            <fieldset class="form-fieldset">
                <legend>Title</legend>
                <label>
                    <input type="text" name="title" class="form-input" id="title">
                    <span id="err-title" class="err">Enter title</span>
                </label>
            </fieldset>

            <fieldset class="form-fieldset">
                <legend>Description</legend>
                <label>
                    <textarea name="description" class="form-input" id="description"></textarea>
                    <span id="err-description" class="err">Enter description</span>
                </label>
            </fieldset>

            <fieldset class="form-fieldset">
                <legend>Tags</legend>               

                <legend>Tag Icon:</legend>
                <label>
                    <select name="tagName" class="form-input">
                        <option>🧶</option>
                        <option>🎭</option>
                        <option>🎨</option>
                        <option>🧵</option>
                        <option>💃</option>
                        <option>🏕️</option>
                        <option>🏔️</option>
                        <option>🌊</option>
                        <option>🪐</option>
                        <option>🎁</option>
                        <option>🏋️</option>
                        <option>👩🏻‍🍳</option>
                        <option>🧘</option>
                        <option>🧗‍♀️</option>
                        <option>🛍️</option>
                        <option>✈️</option>
                    </select>
                    <span id="err-tagIcon" class="err">Select An Icon</span>
                </label>

                <legend>Tag Color:</legend>
                <label>
                    <input type="color" name="tagColor" class="form-input" value="#000000">
                    <span id="err-color" class="err">Pick a Color</span>
                </label>
            </fieldset>

            <fieldset class="form-fieldset">
                <legend>Time Needed</legend>
                <legend>Start By:</legend>
                <label>
                    <input type="time" name="startTimer" class="form-input"> 
                    <span id="err-sTime" class="err">Select a Start Time</span>
                </label>
                <legend>End By:</legend>
                <label>
                    <input type="time" name="endTimer" class="form-input"> 
                    <span id="err-eTime" class="err">Select a End Time</span>
                </label>
            </fieldset>

            <fieldset class="form-fieldset">
                <legend>Available Date</legend>
                <label>
                    <input type="date" name="dueDate" class="form-input">
                    <span id="err-date" class="err">Select a Date</span>
                </label>
            </fieldset>

            <!-- <fieldset class="form-fieldset">
                <button>Random Selection</button>
            </fieldset> -->

            <button class="btn-submit" type="submit">Submit Hobby</button>    
        </form>        
    </body>
</html>

